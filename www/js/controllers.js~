	});
	
   	var esop = new google.maps.Marker({
    	position: new google.maps.LatLng(50.669070, 4.614903),
   	map: map,
    	title:"ESOP",
	icon: image
	});
	
   	var lavo = new google.maps.Marker({
    	position: new google.maps.LatLng(50.669184, 4.619182),
