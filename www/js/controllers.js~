    	position: new google.maps.LatLng(50.670538, 4.606796),
   	map: map,
    	title:"COUB",
	icon: image
	});
	
   	var cycl = new google.maps.Marker({
    	position: new google.maps.LatLng(50.666175, 4.623584),
   	map: map,
    	title:"CYCL",
	icon: image
	});
	
   	var desc = new google.maps.Marker({
    	position: new google.maps.LatLng(50.669444, 4.611214),
   	map: map,
    	title:"DESC",
	icon: image
