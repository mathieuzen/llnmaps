angular.module('starter.controllers', [])

.controller('MapCtrl', function($scope, $ionicLoading) {

function initialize() {

  var image = 'img/books.png';


    var mapOptions = {
      center: new google.maps.LatLng(50.668611,4.612948),
      zoom: 17,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };

    var map = new google.maps.Map(document.getElementById("map"),
        mapOptions);

    $scope.map = map;

   	var agor = new google.maps.Marker({
    	position: new google.maps.LatLng(50.668940, 4.611550),
   	map: map,
    	title:"AGOR",
	icon: image
	});

   	var barb = new google.maps.Marker({
    	position: new google.maps.LatLng(50.668178, 4.621446),
   	map: map,
